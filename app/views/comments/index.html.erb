<h4>Comments</h4>

<% if @comments.count != 0 %>
  <table class="table">
    <thead>
      <tr>
        <th>User</th>
        <th>Created At</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.creator_email %></td>
          <td><%= comment.created_at %></td>
          <td><%= comment.comment %></td>
          <% if current_user.email == comment.creator_email %>
            <td><%= link_to 'Remove', project_milestone_task_comment_path(@project, @milestone, @task, comment), method: :delete %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Add Comment', new_project_milestone_task_comment_path(@project, @milestone, @task) %>
