<h4>Milestones</h4>

<% if @milestones.count == 0 %>
  Your project requires some planning! <br>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Due date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @milestones.each do |milestone| %>
        <tr>
          <td><%= link_to milestone.name, project_milestone_path(@project, milestone) %></td>
          <td><%= milestone.due_date %></td>
          <td><%= milestone.status %></td>
          <td><%= link_to 'Remove', project_milestone_path(@project, milestone), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'New Milestone', new_project_milestone_path(@project) %>
