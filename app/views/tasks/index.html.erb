<h3>Tasks</h3>

<% if @tasks.count == 0 %>
Your milestone requires some planning! <br>
<% else %>
  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Creator</th>
        <th>Difficulty</th>
        <th>Priority</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td class="vert-align"><%= link_to task.name, project_milestone_task_path(@project, @milestone, task) %></td>
          <td class="vert-align"><%= task.user_email %></td>
          <td class="vert-align"><%= task.difficulty %></td>
          <td class="vert-align"><%= task.priority %></td>
          <td class="vert-align"><%= task.status %></td>
          <% if task.status == 'Created' %>
            <td class="vert-align"><%= link_to 'Start', start_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% elsif task.status == 'Started' && current_user.email == task.owner_email%>
            <td class="vert-align"><%= link_to 'Finish', review_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% elsif task.status == 'Pending Review' && current_user.email == task.user_email%>
            <td class="vert-align"><%= link_to 'Reviewed', complete_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% end %>
          <td class="vert-align"><%= link_to 'Destroy', project_milestone_task_path(@project, @milestone, task), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Task', new_project_milestone_task_path(@project, @milestone), :class => "btn btn-custom" %>
