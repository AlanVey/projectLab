<h3>Tasks</h3>

<% if @tasks.count == 0 %>
Your milestone requires some planning! <br>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Creator</th>
        <th>Difficulty</th>
        <th>Priority</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, project_milestone_task_path(@project, @milestone, task) %></td>
          <td><%= task.user_email %></td>
          <td><%= task.difficulty %></td>
          <td><%= task.priority %></td>
          <td><%= task.status %></td>
          <% if task.status == 'Created' %>
            <td><%= link_to 'Start', start_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% elsif task.status == 'Started' %>
            <td><%= link_to 'Finish', review_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% elsif task.status == 'Pending Review' %>
            <td><%= link_to 'Reviewed', complete_status_project_milestone_task_path(@project, @milestone, task) %></td>
          <% end %>
          <td><%= link_to 'Destroy', project_milestone_task_path(@project, @milestone, task), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>

<%= link_to 'New Task', new_project_milestone_task_path(@project, @milestone) %>
