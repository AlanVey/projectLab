<%= form_for [@project, @milestone, @task] do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :difficulty %><br>
    <%= f.select :difficulty, [['One day or less',1],['2 days',2],['3 days',3],['4 days',4],['5 days',5],['6 days',6],['7 days',7],['8 days',8],['9 days',9],['10 days or more',10]] %>
  </div>
  <div class="field">
    <%= f.label :priority %><br>
    <%= f.select :priority, [['Critical',1],['High',2],['Medium',3],['Low',4]] %>
  </div>
  <div class="field">
    <%= f.submit nil, :class => "btn btn-custom" %>
  </div>
<% end %>
