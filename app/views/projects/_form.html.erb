<%= form_for(@project) do |f| %>

  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project_user from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.submit nil, :class => "btn btn-custom" %>
    <% if request.original_url =~ /\/projects\/new/ %>
      <%= link_to 'Cancel', projects_path, :class => 'btn' %>
    <% else %>
      <%= link_to 'Cancel', projects_path(@project), :class => 'btn' %>
    <% end %>
  </div>

<% end %>
