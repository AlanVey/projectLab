<%= simple_form_for(@project, html:{class: 'form horizontal'}) do |f| %>

  <fieldset>

    <%= f.input :name %>
    <%= f.input :description %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', projects_path, :class => 'btn' %>
    </div>
  </fieldset>

<% end %>
