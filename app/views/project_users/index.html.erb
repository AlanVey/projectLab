<h4>Team Members</h4>

<% if @project_user.count == 0 %>
  You are currently working alone<br>
<% else %>
  <table class="table">
    <thead>
    </thead>

    <tbody>
      <% @project_user.each do |project_user| %>
        <tr>
          <td><%= project_user.email %></td>
          <% if current_user == @project.user %>
            <td><%= link_to('Remove', project_project_user_path(@project, project_user), method: :delete)%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if current_user == @project.user %>
  <%= link_to 'Add user', new_project_project_user_path(@project, @project_user) %> 
<% end %>
